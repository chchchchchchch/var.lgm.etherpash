
# GOOD TO KNOW:
# - where tex body is collected: $TMPTEX (add code with >>)
# - current line: $LINE

# --------------------------------------------------------------------------- #

function writeTeXsrc() {

  echo "$1" >> $TMPTEX

}

# --------------------------------------------------------------------------- #

function HELLOWORLD() {

# echo "Hello World!"
  writeTeXsrc "Hello World"

}

# --------------------------------------------------------------------------- #

function GRAFIK() {


# echo $1

  for IMG in `find . -name "*$1*" | egrep "\.pdf$|\.jpg$" | head -1`
   do
      writeTeXsrc "\grafik{$IMG}"
 done
  
}

# --------------------------------------------------------------------------- #

function FULLPAGE() {

  for PDF in `find . -name "*$1.pdf" | head -1`
   do

      writeTeXsrc "\fullpage{$PDF}"

 done
  
}

# --------------------------------------------------------------------------- #

function VFILL() {

  writeTeXsrc "\newline"
  writeTeXsrc "\vfill"

}

# --------------------------------------------------------------------------- #

function SCALEFONT() {

   writeTeXsrc "\scalefont{$1}"

}

# --------------------------------------------------------------------------- #

function VSPACE() {

   writeTeXsrc ""
   writeTeXsrc "\vspace{${1}em}"
}

# --------------------------------------------------------------------------- #

function EMPTYPAGE() {

   NUM=`echo $1 |  tr -d [:alpha:]`
   if [ -z $NUM ]; then NUM=1 ; fi

   COUNT=0
   while [ $COUNT -lt $NUM ]
    do
       writeTeXsrc "\emptypage"
       COUNT=`expr $COUNT + 1`
  done

}

# --------------------------------------------------------------------------- #

function NEWPAGE() {

       writeTeXsrc "\newpage"

}

# --------------------------------------------------------------------------- #

function GRAFIK-P() {

  VAL=`echo $2 |  tr -d [:alpha:]`
  if [ -z $VAL ]; then VAL=1 ; fi

  for PDF in `find . -name "*$1.pdf" | head -1`
   do
      writeTeXsrc "\grafikp{$PDF}{$VAL}"
  done
  
}

