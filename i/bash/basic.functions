
# GOOD TO KNOW:
# - file to write to: $PROCESSED (add code with >>)
# - current line: $LINE

# --------------------------------------------------------------------------- #

function HELLOWORLD() {

  echo "Hello World"  >> $PROCESSED

}

# --------------------------------------------------------------------------- #

function GRAFIK() {

  for PDF in `find . -name "*$1.pdf" | head -1`
   do

      echo "\grafik{$PDF}" >> $PROCESSED

 done
  
}

# --------------------------------------------------------------------------- #

function FULLPAGE() {

  for PDF in `find . -name "*$1.pdf" | head -1`
   do

      echo "\fullpage{$PDF}" >> $PROCESSED

 done
  
}

# --------------------------------------------------------------------------- #

function VFILL() {

  echo "\newline"                >> $PROCESSED  
  echo "\vfill"                  >> $PROCESSED

}

# --------------------------------------------------------------------------- #

function SCALEFONT() {

   echo "\scalefont{$1}"         >> $PROCESSED

}

# --------------------------------------------------------------------------- #

function VSPACE() {

   echo ""                        >> $PROCESSED
   echo "\vspace{${1}em}"         >> $PROCESSED
}

# --------------------------------------------------------------------------- #

function LXXINEHEIGHT() {

   echo "\linespread{$1}"          >> $PROCESSED
}

# --------------------------------------------------------------------------- #

function EMPTYPAGE() {

   NUM=`echo $1 |  tr -d [:alpha:]`
   if [ -z $NUM ]; then NUM=1 ; fi

   COUNT=0
   while [ $COUNT -lt $NUM ]
    do
       echo "\emptypage"           >> $PROCESSED
       COUNT=`expr $COUNT + 1`
  done

}

# --------------------------------------------------------------------------- #

function NEWPAGE() {

       echo "\newpage"        >> $PROCESSED

}

